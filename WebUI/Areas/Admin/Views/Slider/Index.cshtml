@model List<SliderContent>

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Hoverable Table</h4>
			<p class="card-description">
				<a class="btn btn-primary" asp-action="Create">Create</a>
			</p>
			<div class="table-responsive">
				<table class="table table-hover">
					<thead>
						<tr>
							<th>Id</th>
							<th>Image</th>
							<th>Title</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>

						@foreach (SliderContent slider in Model)
						{
							<tr>
								<td>@slider.Id</td>
								<td><img class="rounded-circle" src="~/assets/img/slider/@slider.ImagePath"/></td>
								<td>@slider.Title</td>
								<td class="text-danger">
									<a class="btn btn-outline-dark" asp-action="detail" asp-route-id="@slider.Id">Detail</a>
									<a class="btn btn-outline-success" asp-action="update" asp-route-id="@slider.Id">Update</a>
									<a class="btn btn-outline-danger" asp-action="delete" asp-route-id="@slider.Id">Delete</a>
								</td>
							</tr>
						}

					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>