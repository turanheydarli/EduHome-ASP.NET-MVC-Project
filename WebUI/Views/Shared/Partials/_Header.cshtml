<div class="header-top">
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-sm-8 col-xs-12">
				<div class="header-top-left">
					<p>HAVE ANY QUESTION ?  +880 5698  598  6587</p>
				</div>
			</div>
			<div class="col-md-4 col-sm-4 col-xs-12">
				<div class="header-top-right text-right">
					<ul>
						@if (User.Identity.IsAuthenticated)
						{
							<li><a asp-action="logout" asp-controller="auth">logout</a></li>
							if (User.IsInRole("Admin"))
							{
								<li><a asp-area="admin" asp-controller="dashboard" asp-action="index">@User.Identity.Name</a></li>
							}
						}
						else
						{
							<li><a asp-action="login" asp-controller="auth">login</a></li>
							<li><a asp-action="register" asp-controller="auth">register</a></li>
						}
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>
