@model List<Blog>

<div class="blog-area pt-150 pb-150">
	<div class="container">
		<div class="row">
			<div class="col-xs-12">
				<div class="section-title text-center">
					<img src="~/assets/img/icon/section.png" alt="section-title">
					<h2>LATEST FROM BLOG</h2>
				</div>
			</div>
		</div>
		<div class="row">
			@foreach (Blog blog in Model)
			{
				<div class="col-md-4 col-sm-6 col-xs-12">
					<div class="single-blog">
						<div class="blog-img">
							<a href="blog-details.html"><img src="~/assets/img/blog/@blog.ImagePath" sytle ="left:0px!important" alt="blog"></a>
							<div class="blog-hover">
								<a href="blog-details.html"><i class="fa fa-link"></i></a>
							</div>
						</div>
						0<div class="blog-content">
							<div class="blog-top">
								<p>@blog.Date.ToString("MMM") @blog.Date.ToString("dd")</p>
							</div>
							<div class="blog-bottom">
								<h2><a href="blog-details.html">@blog.Title </a></h2>
								<a href="blog-details.html">read more</a>
							</div>
						</div>
					</div>
				</div>

			}
		</div>
	</div>
</div>
